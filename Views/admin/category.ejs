                        <% if(details!=null){ %> 
                        <table id="example" class="table" style="width:100%">
                            <thead>
                                <tr>
                                    <!-- <th>No:</th> -->
                                    <th>Category Name</th>
                                    <th>Status</th>
                                    <!-- <th>Availability</th> -->
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% details.forEach(function(category){ %>                                  
                                <tr>
                                    <!-- <td></td> -->
                                    <td><%= category.name %> </td>
                                    <td>
                                        <% if(category.status==true){ %>
                                            <p class="text-success"  style="width: 70px;">Active</p>
                                            <% }else{ %>
                                                <p class="text-danger"  style="width: 70px;">Blocked</p>
                                            <% } %>   
                                    </td>
                                    <td>
                                        <% if(category.status==true){ %>
                                                <a class="btn btn-danger" style="width: 70px;" onclick="return confirm ('Are you sure')" href="/action-category?id=<%= category._id %>" role="button">Unlist</a>
                                            <% }else{ %>
                                                <a class="btn btn-success" style="width: 70px;" href="/action-category?id=<%= category._id %>" role="button">List</a>
                                        <% } %>
                                        <a class="btn btn-primary" style="width: 70px;" href="/edit-category?id=<%= category._id %>" role="button">Edit</a>
                                    </td>          
                                </tr>
                                <% }) %> 
