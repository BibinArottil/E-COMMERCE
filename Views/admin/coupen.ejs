            <main>
                <!-- content start -->
                <div class="container-fluid px-4 mt-3">
                        <h1 class="mb-4">Banner Management</h1>

                        <button type="button" class="btn btn-info mb-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-bs-whatever="@mdo">Add coupen</button>
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="staticBackdropLabel">New Coupen</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/add-coupen" method="post">
                                <div class="mb-3">
                                  <label for="recipient-name" class="col-form-label">Coupen code</label>
                                  <input type="text" name="code" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Discount</label>
                                    <input type="number" name="discount" class="form-control" required>
                                  </div>
                                  <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Min purchase amount</label>
                                    <input type="number" name="minamount" class="form-control" required>
                                  </div>
                                  <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Create date</label>
                                    <input type="date" name="createdate" class="form-control" required>
                                  </div>
                                  <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Min purchase amount</label>
                                    <input type="date" name="expiredate" class="form-control" required>
                                  </div>
                                
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                              </form>
                        </div>
                        
                      </div>
                    </div>
                </div>
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>No :</th>
                                    <th>code</th>
                                    <th>Discount</th>
                                    <th>Min Amount</th>
                                    <th>Create Date</th>
                                    <th>Expire Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <% coupen.forEach((list,i)=>{ %> 
                                    <td><%= i+1 %> </td>
                                    <td><%= list.code %> </td>
                                    <td><%= list.discount %></td>
                                    <td><%= list.minpurchaseamount %></td>
                                    <% let date = list.createdate %>
                                    <%  const dgfate = new Date(date); %>
                                   <% const createdate = dgfate.toLocaleDateString(); %> 
                                    <td><%= createdate %> </td>
                                    <% let exdate = list.expiredate %>
                                    <%  const expdate = new Date(exdate); %>
                                   <% const expiredate = expdate.toLocaleDateString(); %> 
                                    <td><%= expiredate %> </td>
                                    <td>
                                        <% if(list.status==true){ %>
                                            <p class="text-success"  style="width: 70px;">Active</p>
                                            <% }else{ %>
                                                <p class="text-danger"  style="width: 70px;">Blocked</p>
                                            <% } %>
                                    </td>
                                    <td>
                                        <% if(list.status==true){ %>
                                            <a class="btn btn-danger" style="width: 70px;" href="/action-coupen?id=<%= list._id %> " onclick="return confirm('Are you sure block')" role="button">Block</a>
                                        <% }else{ %>
                                            <a class="btn btn-success" style="width: 70px;" href="/action-coupen?id=<%= list._id %> " role="button">Active</a>
                                    <% } %>
                                    <a class="btn btn-primary" style="width: 70px;" href="/edit-coupen?id=<%= list._id %> " role="button">Edit</a>
                                    </td>
                                </tr>
                                <% }) %> 
                            </tbody>
                        </table>    
