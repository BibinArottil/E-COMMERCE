                <% } %> 
             
            </div>
            <% }else{ %> 
                <div class="col-lg-12 table-responsive mb-5">
                <div class="d-flex justify-content-center mb-5">
                    <img class="img-fluid mt-5" style="width: 500px;" src="/Public/user/images/user-empty-cart.png" alt="">
                  </div>
                  </div>
                <% } %> 
            
        </div>
        
    </div>
