                                            //         method:'put',
                                            //         data:{id:productId},
                                            //         success: (res) =>{
                                            //             // $(`#cartQty${i}`).html(res.data.existProduct.qty)
                                            //             // $(`#cartPrice${i}`).html(res.data.existProduct.price)
                                            //             location.reload()
                                            //         }
                                            //     })
                                            // }
                                        </script>
                                    </div>
                                
                                         <span id="cartQty<%= i %>" class="form-control form-control-sm bg-secondary text-center" ><%= cart.qty %></span>

                                    <div class="input-group-btn">
                                     <button class="btn btn-sm btn-primary" onclick="incqty('<%= cart.productId._id %>','<%= i %>')" role="button"><i class="fa fa-plus"></i></button>
                                        <script>
                                            // function incqty(productId,i){
                                            //     $.ajax({
                                            //         url:'/cart-incQty',
                                            //         method:'put',
                                            //         data:{id:productId},
                                            //         success: (res) =>{
                                            //             // $(`#cartQty${i}`).html(res.data.existProduct.qty)
                                            //             // $(`#cartPrice${i}`).html(res.data.existProduct.price)
                                            //             location.reload()
                                            //         }
                                            //     })
                                            // }
                                        </script>
                                    </div>
                                </div>
                            </td>
                            <td id="cartPrice<%= i %>" class="align-middle">₹<%= cart.price %></td>
                            <% subtotal += cart.price %> 
                            <td class="align-middle"><a class="btn btn-sm btn-primary" href="/cart-delete?id=<%= cart._id %> " onclick="return confirm ('Are you sure')" role="button"><i class="fa fa-times"></i></a></td>
