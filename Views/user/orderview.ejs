<%- include('../layout/user/header.ejs') %> 

    <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
            <h1 class="font-weight-semi-bold text-uppercase mb-1">Order view</h1>
        
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Cart Start -->
    <section class="h-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-10">
              <div class="card" style="border-radius: 10px;">
                <!-- <div class="card-header px-4 py-5">
                  <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">Anna</span>!</h5>
                </div> -->
                <div id="Invoice">
                <div class="card-body p-4">
                  <!-- <div class="d-flex justify-content-between align-items-center mb-4">
                    <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
                    <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
                  </div> -->
                  <% orderData.forEach((list)=>{ %> 
                  <div class="card shadow-0 border mb-4">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md-3">
                          <img src="/Public/admin/productimage/<%= list.image %> "
                            class="img-fluid" alt="Phone">
                        </div>
                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                          <p class="text-muted mb-0"><%= list.productname %> </p>
                        </div>
                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                          <p class="text-muted mb-0 small">Price -$<%= list.productprice %> </p>
                        </div>
                        <!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                          <p class="text-muted mb-0 small">Capacity: 64GB</p>
                        </div> -->
                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                          <p class="text-muted mb-0 small">Qty -<%= list.qty %> </p>
                        </div>
                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                          <p class="text-muted mb-0 small">$<%= list.price %> </p>
                        </div>
                      </div>
                      <!-- <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;"> -->
                      <!-- <div class="row d-flex align-items-center">
                        <div class="col-md-2">
                          <p class="text-muted mb-0 small">Track Order</p>
                        </div>
                        <div class="col-md-10">
                          <div class="progress" style="height: 6px; border-radius: 16px;">
                            <div class="progress-bar" role="progressbar"
                              style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                              aria-valuemin="0" aria-valuemax="100"></div>
                          </div>
                          <div class="d-flex justify-content-around mb-1">
                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                          </div>
                        </div>
                      </div> -->
                    </div>
                  </div>
                  <% }) %> 
                     <div class="row d-flex align-items-center">
                        <div class="col-md-2">
                          <p class="text-muted mb-0 small">Track Order</p>
                        </div>
                        <div class="col-md-10">
                            <% if(newOrder.status=='Processing') {%> 
                                <div class="progress" style="height: 6px; border-radius: 16px;">
                                    <div class="progress-bar" role="progressbar"
                                      style="width: 12%; border-radius: 16px; background-color: #51e63a;" aria-valuenow="12"
                                      aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                  </div>
                                  <div class="d-flex justify-content-around mb-1">
                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Processing</p>
                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                    <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for Delivered</p>
                                  </div>
                                <% }else if(newOrder.status=='Packed') {%> 
                                    <div class="progress" style="height: 6px; border-radius: 16px;">
                                        <div class="progress-bar" role="progressbar"
                                          style="width: 37%; border-radius: 16px; background-color: #51e63a;" aria-valuenow="37"
                                          aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                      </div>
                                      <div class="d-flex justify-content-around mb-1">
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Processing</p>
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for Delivered</p>
                                      </div>
                                    <% }else if(newOrder.status=='Shipped') { %> 
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                              style="width: 59%; border-radius: 16px; background-color: #51e63a;" aria-valuenow="59"
                                              aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                          </div>
                                          <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Processing</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for Delivered</p>
                                          </div>
                                          <% }else if(newOrder.status=='Cancel') { %> 
                                            <div class="progress" style="height: 6px; border-radius: 16px;">
                                                <div class="progress-bar" role="progressbar"
                                                  style="width: 100%; border-radius: 16px; background-color: #c82828;" aria-valuenow="100"
                                                  aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                              </div>
                                              <div class="d-flex justify-content-around mb-1">
                                                <!-- <p class="text-muted mt-1 mb-0 small ms-xl-5">Processing</p>
                                                <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                                                <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p> -->
                                                <p class="text-muted mt-1 mb-0 small ms-xl-5">Cancelled</p>
                                              </div>
                                                <% }else{ %>
                                                    <div class="progress" style="height: 6px; border-radius: 16px;">
                                                        <div class="progress-bar" role="progressbar"
                                                            style="width: 100%; border-radius: 16px; background-color: #51e63a;" aria-valuenow="37"
                                                            aria-valuemin="0" aria-valuemax="100">
                                                        </div>
                                                        </div>
                                                        <div class="d-flex justify-content-around mb-1">
                                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Processing</p>
                                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Packed</p>
                                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>
                                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for Delivered</p>
                                                        </div>
                                                    <% } %>  
                     
                        </div>
                      </div>  
                  <div class="d-flex justify-content-between pt-2">
                    <p class="font-weight-medium mb-0">Order Address</p>
                    <p class="font-weight-medium mb-0"><span class="font-weight-bold me-4">Total - </span>$<%= orderData[0].total %> </p>
                  </div>
      
                  <div class="d-flex justify-content-between pt-1">
                    <p class="text-muted mb-0">
                        <%= orderData[0].address.addresstype %> <br>
                        <%= orderData[0].address.name %> <br>
                        <%= orderData[0].address.address %> ,
                        <%= orderData[0].address.district %> ,
                        <%= orderData[0].address.state %> ,
                        <%= orderData[0].address.country %>  <br>
                        <%= orderData[0].address.pin %> <br>
                        <%= orderData[0].address.mobile %> 
                     </p>
                     
                     <% if(newOrder.status=='Cancel') {%> 
                     </div>
                     <% }else if(newOrder.status=='Delivered'){ %> 
                      <button class="btn btn-dark mt-4 px-3" style="height: 40px;display: block;" onclick="printInvoice('Invoice')" >Invoice</button>
                      <% }else{ %> 
                        <a style="height: 40px;display: block;" href="/order-cancel?id=<%= newOrder._id %>" onclick="return confirm('Are you sure')" class="btn btn-dark mt-4 px-3">Cancel</a>
                        <% } %> 
                  </div>
                </div>
                
                <!-- <div class="card-footer border-0 px-4 py-5"
                  style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                  <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                    paid: <span class="h2 mb-0 ms-2">$1040</span></h5>
                </div> -->
              </div>
            </div>
          </div>
        </div>
      </section>
    <!-- Cart End -->


    <!-- Footer Start -->
    <!-- <script>
        function pop() {
            document.getElementById("cancel").style.display("none")
        }
    </script> -->
    <script>
      function printInvoice(divName) {
      var printContents = document.getElementById(divName).innerHTML;
      var originalContents = document.body.innerHTML;
  
      document.body.innerHTML = printContents;
  
      window.print();
  
      document.body.innerHTML = originalContents;
  }
  </script>
    <%- include('../layout/user/footer.ejs') %> 
