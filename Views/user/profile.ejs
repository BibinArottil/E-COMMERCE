                        <a href="">Wishlist</a>
                    </div> -->
                    <!-- <button type="button" class="btn btn-primary mb-3" style="width: 180px;">Edit profile</button> -->
                    <a class="btn btn-primary mb-3" style="width: 180px;" href="/edit-profile?id=<%= userData._id %> " role="button">Edit profile</a>
                    <br>
                    <!-- <button type="button"  class="btn btn-primary mb-3" style="width: 180px;">Change password</button> -->
                    <a class="btn btn-primary mb-3" style="width: 180px;" href="/change-password" role="button">Change password</a>
                    <br>
                    <!-- <button type="submit" class="btn btn-primary mb-3" style="width: 180px;">Add address</button> -->
                    <a class="btn btn-primary mb-3" style="width: 180px;" href="/address" role="button">Add address</a>
                    <% } %> 
                </div>
            </div>
            <div class="row mt-5">
            <% userData.address.forEach(function(address) {%> 
          <div class="col-lg-3">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0"><%= address.addresstype %>   Address</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Name</h6>
                        <h6 class="font-weight-medium"><%= address.name %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Address</h6>
                        <h6 class="font-weight-medium"><%= address.address %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">District</h6>
                        <h6 class="font-weight-medium"><%= address.district %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">State</h6>
                        <h6 class="font-weight-medium"><%= address.state %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Country</h6>
                        <h6 class="font-weight-medium"><%= address.country %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Pin code</h6>
                        <h6 class="font-weight-medium"><%= address.pin %></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Mobile</h6>
                        <h6 class="font-weight-medium"><%= address.mobile %></h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <% if(address.status==true) {%> 
                        <!-- <a class="btn btn-primary mb-3" style="width: 140px;" href="/edit-address?id=<%= address._id %>" role="button">Default</a>
                        <a class="btn btn-primary mb-3" style="width: 140px;" href="/delete-address?id=<%= address._id %>" role="button">Delete</a> -->
                        <% } else { %> 
                            <!-- <a class="btn btn-primary mb-3" style="width: 140px;" href="/delete-address?id=<%= address._id %>" role="button">set as default</a> -->
                            <a class="btn btn-primary mb-3" style="width: 140px;" href="/delete-address?id=<%= address._id %>" onclick="return confirm ('Are you sure')" role="button">Delete</a>
                        <% } %>    
                    <!-- <button class="btn  btn-primary ">Delete</button> -->
                </div>
            </div>
          </div>  
          <% }) %>
        </div>
