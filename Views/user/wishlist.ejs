    <!-- Page Header End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-12 table-responsive mb-5">
                  <% if(wishDetails.length>0) {%>
                    <table class="table table-bordered text-center mb-0">
                        <thead class="bg-secondary text-dark">
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <!-- <th>Quantity</th> -->
                                <!-- <th>Total</th> -->
                                <th>Add to cart</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            <% wishDetails.forEach(function(wish) {%> 
                            <tr>
                                <td class="align-middle"><img src="/Public/admin/productimage/<%= wish.productId.image %> " alt="" style="width: 100px;"><%= wish.productId.name %> </td>
                                <td class="align-middle">$<%= wish.productId.price %> </td>
                                <!-- <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-minus" >
                                            <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="1">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td> -->
                                <!-- <td class="align-middle">$150</td> -->
                                <td class="align-middle">
                                    <!-- <button class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add </button> -->
                                    <a href="/wish-tocart?id=<%= wish.productId._id %> " class="btn btn-primary px-3"><i class="fas fa-shopping-cart mr-1"></i>Add</a>
                                </td>
                                    <td class="align-middle"><a class="btn btn-sm btn-primary" href="/wish-delete?id=<%= wish.productId._id %> " onclick="return confirm ('Are you sure')" role="button"><i class="fa fa-times"></i></a></td>
                                <!-- <td class="align-middle"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></td> -->
                            </tr>
                           <% }) %> 
                        </tbody>
                    </table>
                  
                    <% }else{ %> 
                       
                        <div class="d-flex justify-content-center mb-5">
                            <img class="img-fluid mt-5" style="width: 500px;" src="/Public/user/images/user-empty-wishlist.png" alt="">
                          </div>
                    <% } %>  
            
            </div>
        </div>
    </div>
    <!-- Cart End -->


    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 fixed-bottom">
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="col-md-6 px-xl-0">
